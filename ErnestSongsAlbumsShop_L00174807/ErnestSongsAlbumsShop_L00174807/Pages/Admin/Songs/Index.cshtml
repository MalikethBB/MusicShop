@page
@model IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Songs</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create new Song
            </a>
        </div>
    </div>
</div>

<br /><br /><br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Songs</th>
            <th>Artist</th>
            <th>Album</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Songs)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="50%">@obj.Artist.Name</td>
                <td width="30%">@obj.Album.Name</td>
                <td> <a asp-page="Edit" asp-route-id="@obj.Id">Edit</a> </td>
                <td> <a asp-page="Delete" asp-route-id="@obj.Id">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>