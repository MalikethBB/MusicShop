@page
@model ErnestSongsAlbumsShop_L00174807.Pages.Admin.Songs.EditModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Song</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Song.Name"></label>
            <input asp-for="@Model.Song.Name" class="form-control" />
            <span asp-validation-for="@Model.Song.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Song.ImageName">FileUpload</label>
            <input type="file" name="files" id="uploadBox" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
        </div>
        <div class="col-3">
            <img src="@Model.Song.ImageName" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}