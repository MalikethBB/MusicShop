@page
@model ErnestSongsAlbumsShop_L00174807.Pages.Admin.Songs.CreateModel
@{
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create new Song</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Song.Name"></label>
            <input asp-for="@Model.Song.Name" class="form-control" />
            <span asp-validation-for="@Model.Song.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Song.ArtistId"></label>
            <select asp-for="@Model.Song.ArtistId" asp-items="@Model.ArtistList" class="form-select">
            <option disabled selected="selected Artist ---"></option>
            </select>
            <span asp-validation-for="@Model.Song.ArtistId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Song.GenreId"></label>
            <select asp-for="@Model.Song.GenreId" asp-items="@Model.GenreList" class="form-select">
                <option disabled selected="selected Genre ---"></option>
            </select>
            <span asp-validation-for="@Model.Song.GenreId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Song.ImageName">FileUpload</label>
            <input type="file" name="files" id="uploadBox" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}