@page
@model ErnestSongsAlbumsShop_L00174807.Pages.Genres.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Genres</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create new Genre
            </a>
        </div>
    </div>
</div>

<br /><br /><br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Genres</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Genres)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a asp-page="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>